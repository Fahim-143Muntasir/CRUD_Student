@model List<CRUD_Student.Context.Tbl_student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover">
    <tr>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach(var item in Model )
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Mobile</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="@Url.Action("Student",new { item.ID, item.FirstName, item.LastName, item.Email, item.Mobile, item.Description })" class="btn btn-success">Edit</a>
                        <a href="@Url.Action("Delete", new { item.ID})"class="btn btn-danger">Delete</a>
                        
                </tr>
            }
    
</table>
